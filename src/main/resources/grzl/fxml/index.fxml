<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="@../css/index.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fx.grzl.controller.GrzlController">
    <children>
        <VBox layoutX="-1.0" layoutY="-1.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox prefHeight="30.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="40.0" text=" 编码:"/>
                        <TextField fx:id="bm" disable="true" prefHeight="30.0" prefWidth="263.0" HBox.hgrow="ALWAYS"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="30.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="40.0" text=" 地址:"/>
                        <TextField fx:id="dz" prefHeight="30.0" prefWidth="263.0" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onMouseClicked="#updateAdderss" prefHeight="30.0" text="确定"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="30.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="40.0" text=" 电话:"/>
                        <TextField fx:id="dh" prefHeight="30.0" prefWidth="263.0" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onMouseClicked="#updatePhone" prefHeight="30.0" text="确定"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="30.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="40.0" text=" 密码:"/>
                        <TextField fx:id="mm" prefHeight="30.0" prefWidth="263.0" HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onMouseClicked="#updatePWD" prefHeight="30.0" text="确定"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
